<?php
  // exam1 problem2 include file
  // create UnitCounter class
  class UnitCounter
  {
    public $units = 0;
    public $weightPerUnit = 1.0;
    
    function add($num = 1)  // Add $num to the number of units
    {
      $this->units = $this->units + $num;
    }
    function totalWeight()  // Calculate the total weight
    {
      return $this->units * $this->weightPerUnit;
    }
  }
?>
