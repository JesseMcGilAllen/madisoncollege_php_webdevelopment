#!/usr/bin/perl 
#chdirExample.pl
use warnings;
use strict;


if(@ARGV != 2) {
    print "Enter the number of students and the size of the teams\n";
    die;
}

my $num_students = $ARGV[0];
my $team_size = $ARGV[1];
my $calc;
my $stu_count = 0;
my %used_nums;
my $line_count = 0;


print "\n\n";

while(1) {
    if($stu_count >= $num_students) {
        last;
    }
    while(1) {
        $calc = int(rand $num_students) + 1;
        #print "next calc: $calc\n";
        
        if(exists $used_nums{$calc}) {
            next;
        }
        else {
            $used_nums{$calc} = "1";
            print "$calc ";
            $line_count++;
            if($line_count >= $team_size) {
                print "\n";
                $line_count = 0;
            }
            $stu_count++;
            last;
        }
    }
}

print "\n\n";
